<div class="login-container">
  <h1 class="login-title">Login</h1>
  <form action="/users/login" method="POST">
    <div class="input-container">
      <label for="name" class="email-title">Name</label>
      <input id="name" type="text" class="email-input" name="name" placeholder="Enter Name">
    </div>
    <div class="input-container">
      <label for="email" class="email-title">Email</label>
      <input id="email" type="text" class="email-input" name="email" placeholder="Enter email"> 
    </div>
    <div class="input-container">
      <label for="password" class="password-title">Password</label>
      <input id="password" type="text" class="password-input" name="password" placeholder="Enter password">
    </div>
    <div class="input-container">
      <label for="confirmPassword" class="password-title">Confirm Password</label>
      <input id="confirmPassword" type="text" class="password-input" name="confirmPassword"  placeholder="Confirm password">
    </div>
    <button type="submit" class="btn-login-submit">Login</button>
    <a href="/auth/google" class="btn-google-login">Google Login</a>
  </form>
  <p>
    No Account? <a href="/users/register">Regisiter</a>
  </p>
</div>